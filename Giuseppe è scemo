<script>
    // Funzioni per gestire le risposte
    function rispondiSi() {
        document.getElementById("risposta").innerHTML = "Pikoffo tvb!";
    }

    function rispondiNo() {
        document.getElementById("risposta").innerHTML = "Vaffamocc a mamt!";
    }

    // Mostra il pupazzetto dopo il caricamento della pagina
    window.onload = function () {
        document.getElementById("pupazzetto").style.display = "block";
    };
</script>

